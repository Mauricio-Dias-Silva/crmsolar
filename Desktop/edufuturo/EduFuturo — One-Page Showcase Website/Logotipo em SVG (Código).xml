<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <!-- Fundo transparente -->
  <defs>
    <linearGradient id="blueGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#1a3c6e"/>
      <stop offset="100%" stop-color="#2c5fa2"/>
    </linearGradient>
    <linearGradient id="goldGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#FFD700"/>
      <stop offset="100%" stop-color="#FFC107"/>
    </linearGradient>
  </defs>

  <!-- Nome da marca -->
  <text x="200" y="270" font-family="Poppins, sans-serif" font-size="28" fill="#1a3c6e" text-anchor="middle" font-weight="600">EduFuturo</text>

  <!-- Tronco (livro aberto) -->
  <path d="M180 180 L180 140 L200 120 L220 140 L220 180" fill="none" stroke="#1a3c6e" stroke-width="8" stroke-linecap="round"/>

  <!-- Folhas (coroa de conhecimento) -->
  <circle cx="200" cy="100" r="30" fill="url(#blueGradient)" opacity="0.9"/>
  <circle cx="170" cy="110" r="25" fill="url(#blueGradient)" opacity="0.8"/>
  <circle cx="230" cy="110" r="25" fill="url(#blueGradient)" opacity="0.8"/>

  <!-- Raízes (circuitos digitais) -->
  <path d="M185 180 
           L170 200 
           L160 190 
           L150 200 
           L140 190" 
        fill="none" 
        stroke="url(#goldGradient)" 
        stroke-width="5" 
        stroke-linecap="round" 
        stroke-linejoin="round"
        stroke-dasharray="4,3"/>

  <path d="M215 180 
           L230 200 
           L240 190 
           L250 200 
           L260 190" 
        fill="none" 
        stroke="url(#goldGradient)" 
        stroke-width="5" 
        stroke-linecap="round" 
        stroke-linejoin="round"
        stroke-dasharray="4,3"/>

  <!-- Linha de conexão entre raiz e folha (pulso digital) -->
  <animate xlink:href="#pulse" attributeName="opacity" values="0.6;1;0.6" dur="2s" repeatCount="indefinite" />

  <!-- Elemento de pulso no centro -->
  <circle id="pulse" cx="200" cy="140" r="5" fill="url(#goldGradient)" opacity="0.8">
    <animate attributeName="r" values="5;8;5" dur="1.5s" repeatCount="indefinite" />
  </circle>
</svg>